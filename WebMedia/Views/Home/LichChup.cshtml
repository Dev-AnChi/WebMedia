@using WebMedia.Models
@model MultiDataModels

@{
    ViewBag.Title = "LichChup";
    Layout = null;
    int i = 0;
    var grid = new WebGrid(Model.lichChups, canPage: true, defaultSort: "NgayChup", rowsPerPage: 5);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lịch chụp</title>

    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

         .grid-footer a {
             background-color: #ffffff;
             color: blue;
             box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
             padding: 1px 10px 2px 10px;
         }

         .grid-footer a:active, a:hover {
             background-color: #ffffff;
             color: #FFAD33;
             box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
         }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table {
            text-align: center;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
            border : solid 1px black
        }
    </style>
</head>
<body>
    <h2>Lịch chụp</h2>
    <div id="gridContent">
        @grid.GetHtml(
            tableStyle: "table table-bordered table-hover",
            footerStyle: "grid-footer",
            fillEmptyRows: true,
            mode: WebGridPagerModes.Numeric,
            alternatingRowStyle: "alternatingRowStyle",
              columns: new[]  // colums in grid
             {
                   grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
                   grid.Column("NgayChup","Ngày chụp"), //the model fields to display
                   grid.Column("Dia_Diem","Địa điểm"  ),
                   grid.Column("TrangThaiChup","Trạng thái chụp",format: (@item) => @item.TrangThaiChup==true?"Đã chụp":"Chưa chụp"),
              }
            )
    </div>
</body>
</html>
